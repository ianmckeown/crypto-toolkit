@{
    ViewData["Title"] = "Home Page";
}

    <div class="row">
        <div clas="col-md-4"></div>
        <div clas="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-info">
                        Current Market Price
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col text-center">
                            <h3 class="current-crypto-price"></h3>
                            <button id="refresh-price" class="btn btn-primary">
                                Refresh
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div clas="col-md-4"></div>
    </div>

@section Scripts{
    <script type="text/javascript">

        function getCryptoPrice() {
            $.ajax('@Url.Action("CurrentCryptoPrice")',
                {
                    method: "GET",
                    success: function (data) {
                        console.log("get");
                        for (let i = 0; i < data.length; i += 1) {
                            if (data[i].name === "price_usd") {
                                $(".current-crypto-price").text(data[i].value);
                            }
                        }
                    },
                    error: function(data){
                        console.log(data);
                    }
                });
        }

        $(document).ready(function () {
            getCryptoPrice();

            $("#refresh-price").on("click", getCryptoPrice);
        });
    </script>
}
