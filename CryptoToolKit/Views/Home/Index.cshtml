@{
    ViewData["Title"] = "Home Page";
}

    <div class="row">
        <div clas="col"></div>
        <div clas="col">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-info">
                        Current Market Price
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col text-center">
                            <select class="current-crypto-symbol">
                                <option value="BTC">BTC</option>
                                <option value="LTC">LTC</option>
                                <option value="ETH">ETH</option>
                            </select>
                            <h3 class="current-crypto-price"></h3>
                            <button id="refresh-price" class="btn btn-primary">
                                Refresh
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div clas="col"></div>
    </div>

@section Scripts{
    <script type="text/javascript">

        function getCryptoPrice() {

            const symbol = $(".current-crypto-symbol").val();

            $.ajax('@Url.Action("CurrentCryptoPrice")',
                {
                    method: "GET",
                    data: {
                        asset: symbol,
                        fiat: "USD"
                    },
                    success: function (data) {
                        console.log("get");
                        $(".current-crypto-price").text(data.price);
                    },
                    error: function(data){
                        console.log(data);
                    }
                });
        }

        $(document).ready(function () {
            getCryptoPrice();

            $("#refresh-price").on("click", getCryptoPrice);
        });
    </script>
}
